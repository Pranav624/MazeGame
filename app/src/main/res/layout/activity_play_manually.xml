<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.PlayManuallyActivity"
    android:background="@color/black">

    <edu.wm.cs.cs301.pranavgonepalli.gui.MazePanel
        android:id="@+id/maze_view"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/show_map_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_map"
        android:fontFamily="@font/vt323"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/show_solution_text"/>
    <Switch
        android:id="@+id/show_map_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_map_text"
        app:layout_constraintStart_toStartOf="@id/show_map_text"
        app:layout_constraintEnd_toEndOf="@id/show_map_text"/>
    <TextView
        android:id="@+id/show_solution_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_solution"
        android:fontFamily="@font/vt323"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/show_map_text"
        app:layout_constraintEnd_toStartOf="@id/show_walls_text"/>
    <Switch
        android:id="@+id/show_solution_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_solution_text"
        app:layout_constraintStart_toStartOf="@id/show_solution_text"
        app:layout_constraintEnd_toEndOf="@id/show_solution_text"/>
    <TextView
        android:id="@+id/show_walls_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_walls"
        android:fontFamily="@font/vt323"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/show_solution_text"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Switch
        android:id="@+id/show_walls_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_walls_text"
        app:layout_constraintStart_toStartOf="@id/show_walls_text"
        app:layout_constraintEnd_toEndOf="@id/show_walls_text"/>
    <SeekBar
        android:id="@+id/zoom_seekbar"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progressBackgroundTint="@color/white"
        android:progressTint="#d03e19"
        android:thumb="@drawable/pacman"
        app:layout_constraintTop_toBottomOf="@id/maze_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:max="10"/>
    <Button
        android:id="@+id/jump_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:textSize="15dp"
        android:textColor="#d03e19"
        android:fontFamily="@font/press_start_2p"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="JUMP"
        android:onClick="jump"/>
    <Button
        android:id="@+id/left_button"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="2dp"
        android:textSize="20dp"
        android:fontFamily="@font/press_start_2p"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/jump_button"
        android:text="\u003C"
        android:onClick="rotateLeft"/>
    <Button
        android:id="@+id/right_button"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="2dp"
        android:textSize="20dp"
        android:fontFamily="@font/press_start_2p"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/jump_button"
        android:text="\u003E"
        android:onClick="rotateRight"/>
    <Button
        android:id="@+id/forward_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="41dp"
        android:textSize="30dp"
        android:fontFamily="@font/press_start_2p"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/jump_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="\u005E"
        android:onClick="move"/>

</androidx.constraintlayout.widget.ConstraintLayout>